// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  name String @unique

  item        Item[]
  rod         Mod[]
  rethod      Method[]
  recipe      Recipe[]
  requirement Requirement[]
}

model Item {
  id       Int    @id @default(autoincrement())
  name     String
  type     String
  quantity Int?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  modId Int?
  mod   Mod? @relation(fields: [modId], references: [id])

  usedIn     RecipeComponents[]
  producedBy RecipeOutput[]
}

model Mod {
  id   Int    @id @default(autoincrement())
  name String

  items Item[]

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Method {
  id   Int    @id @default(autoincrement())
  name String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  recipe Recipe[]
}

model Recipe {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  methodId Int?
  method   Method? @relation(fields: [methodId], references: [id])

  components         RecipeComponents[]
  output             RecipeOutput[]
  recipeRequirements RecipeRequirements[]
}

model RecipeComponents {
  itemId   Int
  item     Item   @relation(fields: [itemId], references: [id])
  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id])
  quantity Int    @default(1)

  @@id([itemId, recipeId])
}

model RecipeOutput {
  itemId   Int
  item     Item   @relation(fields: [itemId], references: [id])
  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id])
  chance   Float  @default(1)

  @@id([itemId, recipeId])
}

model Requirement {
  id        Int     @id @default(autoincrement())
  name      String
  completed Boolean @default(false)

  userId Int
  user   User @relation(fields: [userId], references: [id])

  recipeRequirements RecipeRequirements[]
}

model RecipeRequirements {
  requirementId Int
  requirement   Requirement @relation(fields: [requirementId], references: [id])
  recipeId      Int
  recipe        Recipe      @relation(fields: [recipeId], references: [id])

  @@id([recipeId, requirementId])
}
